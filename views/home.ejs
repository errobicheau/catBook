<!DOCTYPE html>
<html>
  <head>
    <title>CatBook | Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/styles/main.css" />
    <script src="https://kit.fontawesome.com/a45ab2c295.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="container mt-4">
      <% cats.forEach(cat => { %>
      <div class="card mb-5 mx-auto">
          <div class="card-header">
              <div class="d-flex align-items-center">
                  <img src="./images/catBook.png" alt="Profile Picture" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;">
                  <div class="ml-2 pt-3">
                      <h6 class="mb-0"><%= cat.owner.username || User %></h6>
                      <p class="text-muted small"><%= cat.formattedDate %></p>
                  </div>
              </div>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= cat.name %></h5>
            <p class="card-text">
              Age: <%= cat.age %> <br>
              Favorite food: <%= cat.favoriteFood %> <br>
              Fun fact: <%= cat.funFact %> <br>
            </p>
              <img src="/images/<%= cat.image %>" alt="Post Image" class="img-fluid mb-3 rounded cover">
              <div>
                <a href="#" class="card-link">Like</a>
                <a href="#" class="card-link">Comment</a>
                <a href="#" class="card-link">Share</a>
              </div>
          </div>
          <% if (currentUser && cat.owner._id.equals(currentUser._id)) { %>
            <div class="card-footer">
              <a href="/edit/<%= cat._id %>" class="btn btn-primary"><i class="fas fa-edit mr-1"></i>Edit Post</a>
              <form action="/delete/<%= cat._id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash mr-1"></i>Delete Post</button>
              </form>
            </div>
            <% } %>
      </div>
      <% }); %>
  </div>
  <%- include('partials/footer') %>


  </body>
</html>
